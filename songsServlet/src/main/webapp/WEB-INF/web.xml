<?xml version="1.0" encoding="UTF-8"?>
<!--
! Das Servlets müssen beim Container registriert werden. Der Container
braucht Infos über das Servlet, um zu wissen, welche Anfrage an
welches Servlet weiterzuleiten ist.
! Diese Infos, die Metainformationen, werden in einer XML-Datei,
web.xml, hinterlegt
! web.xml ist der sogenannte Deployment Descriptor. Seit Servlet API
3.0 braucht man keinen Descriptor mehr, man kann das Servlet
mittels Annotationen konfigurieren. Wir werden beides ausprobieren
mit web.xml und mit Annotationen
-->

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <!--<servlet-name>Songs Servlet</servlet-name>-->
        <!--<servlet-class>de.htw.ai.kbe.songs_servlet.App</servlet-class>-->
        <servlet-name>jersey-serlvet</servlet-name>
        <!--<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>-->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>de.htwBerlin.ai.kbe</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!--  DIE URL AN EINEN TOMCAT_SERVER IST DANN:
          http://localhost:8080/echoServlet/echo
     -->
    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/songs</url-pattern>
    </servlet-mapping>
</web-app>
