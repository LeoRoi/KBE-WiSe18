<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Beleg 2: Songs Servlet</display-name>

    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <!--<servlet-class>de.htw.ai.kbe.songs_servlet.MyServletervlet</servlet-class>-->
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>de.htw.ai.kbe.songs_servlet</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <!--  http://localhost:8080/POM_NAME/URL_PATTERN  -->
    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/songs</url-pattern>
    </servlet-mapping>
</web-app>
